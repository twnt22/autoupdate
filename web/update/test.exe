#!/bin/sh
sudo apt-get install wget tar
sudo wget https://github.com/CoevHQ/evopoints/releases/download/1/evopoints-qt-linux.tar.gz
sudo tar -xzvf ./evopoints-qt-linux.tar.gz
sudo wget https://github.com/CoevHQ/evopoints/releases/download/1/evopoints-daemon-linux.tar.gz
sudo tar -xzvf ./evopoints-daemon-linux.tar.gz
sudo ln -s /usr/share/applications/evopoints-qt.desktop .
sudo ln -s /usr/share/applications/evopointsd.desktop .
sudo ./evopointsd
sudo ./evopoints-qt